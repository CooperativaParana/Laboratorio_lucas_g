{
  "family": "coadelpa-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "coadelpa-backend",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/coadelpa-backend:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DJANGO_DEBUG",
          "value": "false"
        },
        {
          "name": "USE_S3",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "DJANGO_SECRET_KEY",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/coadelpa/DJANGO_SECRET_KEY"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/coadelpa/DB_NAME"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/coadelpa/DB_USER"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/coadelpa/DB_PASSWORD"
        },
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/coadelpa/DB_HOST"
        },
        {
          "name": "AWS_STORAGE_BUCKET_NAME_STATIC",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/coadelpa/AWS_STORAGE_BUCKET_NAME_STATIC"
        },
        {
          "name": "AWS_STORAGE_BUCKET_NAME_MEDIA",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/coadelpa/AWS_STORAGE_BUCKET_NAME_MEDIA"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/coadelpa-backend",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
